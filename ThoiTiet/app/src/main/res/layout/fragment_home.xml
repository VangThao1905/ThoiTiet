<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/_40sdp"
    android:background="@android:color/white">

    <TextView
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_margin="@dimen/_8sdp"
        android:layout_centerHorizontal="true"
        android:text="Quoc gia:"
        android:id="@+id/txtCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:scaleType="fitXY"
        android:src="@drawable/ic_sunny100"
        android:id="@+id/imgIconWeather"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtCountry"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"/>

    <TextView
        android:textStyle="bold"
        android:id="@+id/txtTemperature"
        android:gravity="center"
        android:layout_margin="@dimen/_8sdp"
        android:layout_centerInParent="true"
        android:textSize="@dimen/_60sdp"
        android:layout_centerHorizontal="true"
        android:text="30Â°C"
        android:textColor="#F44336"
        android:layout_below="@id/imgIconWeather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:gravity="center"
        android:textColor="#000000"
        android:layout_margin="@dimen/_8sdp"
        android:layout_below="@+id/txtTemperature"
        android:text="Nhiet do thap nhat:"
        android:id="@+id/txtMinTemperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:gravity="center"
        android:textColor="#000000"
        android:layout_margin="@dimen/_8sdp"
        android:layout_below="@+id/txtMinTemperature"
        android:text="Nhiet do cao nhat:"
        android:id="@+id/txtMaxTemperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:textColor="#3F51B5"
        android:textSize="@dimen/_30sdp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtMaxTemperature"
        android:text="Ten tinh"
        android:id="@+id/txtDistrictName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_margin="@dimen/_8sdp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ic_save_place"
        android:layout_alignParentRight="true"
        android:id="@+id/imgSavePlace"
        android:layout_width="@dimen/_32sdp"
        android:layout_height="@dimen/_32sdp"/>

</RelativeLayout>